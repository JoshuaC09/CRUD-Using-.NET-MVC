@{
}
@model StudentPortal.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <lable class="form-label">Id</lable>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <lable class="form-label">Email</lable>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <lable class="form-label">Email</lable>
            <input type="email" class="form-control" asp-for="Email" />
        </div>


        <div class="mt-3">
            <lable class="form-label">Phone</lable>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>


        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="isSubScribed" />
            <label class="form-check-label" for="subsribed">Subscribe</label>
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
                
            <button type="submit" class="btn btn-danger ms-3"
               asp-action="Delete"
            asp-controller="Students">Delete</button>
        </div>
    </form>
}